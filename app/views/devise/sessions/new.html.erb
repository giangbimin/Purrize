<body class="h-screen bg-gray-200">
  <div class="max-w-sm mx-auto rounded shadow-lg md:max-w-md my-10 p-6 pb-10 bg-gray-100"> <div class=" flex justify-center border-b border-gray-300">
      <h1 class="font-bold text-lg text-gray-400 pb-1">Login</h1>
  </div>
  <div class="pt-6">
    <div class="text-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border p-2 bg-white w-full h-10 focus:outline-none focus:border-blue-400 rounded text-sm placeholder-gray-600 placeholder-opacity-40 mt-2 text-gray-600", placeholder: "E-mail*"%>
          <%= f.password_field :password, autocomplete: "current-password", class:"block border p-2 bg-white w-full h-10 focus:outline-none focus:border-blue-400 rounded text-sm placeholder-gray-600 placeholder-opacity-40 mt-2 text-gray-600", placeholder: "Password*" %>
          <% if devise_mapping.rememberable? %>
            <div class="text-left block  p-2 w-full h-10 rounded text-sm placeholder-gray-600 placeholder-opacity-40 mt-2 text-gray-600">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "Log in", class: "w-80 h-9 bg-blue-500 text-sm font-semibold mt-2 rounded-sm text-gray-100 focus:outline-none hover:bg-blue-600"%>
      <% end %>
    </div>
  </div>
  <div class="pt-3 text-center">
    <span class="text-gray-600 text-xs w-2/3">Don't have an account?
      <span type="button" class="text-gray-700 text-xs font-bold">Sign Up</span>
    </span>
  </div>
  <div class="flex justify-between items-center mt-1">
      <hr class="w-full border-gray-300"> <span class="p-2 text-gray-400 text-xs">OR</span>
      <hr class="w-full border-gray-300">
  </div>
  <div class="pt-2">
    <p class="text-gray-700 font-bold pb-2 pl-1" style="font-size: 10px;">You can also login with:</p>
    <div class="flex justify-between items-center">
      <div class="w-1/4 mx-1">
        <%= button_to "Facebook", omniauth_authorize_path(resource_name, "facebook"), data: { turbo: false }, class: "w-full p-2 font-bold text-white text-xs bg-blue-800 rounded focus:outline-none hover:bg-blue-900", type: "button" %>
      </div>
      <div class="w-1/4 mx-1">
        <%= button_to "Google", omniauth_authorize_path(resource_name, "google_oauth2"), data: { turbo: false }, class: "w-full p-2 font-bold text-white text-xs bg-red-600 rounded focus:outline-none hover:bg-red-800", type: "button" %>
      </div>
      <div class="w-1/4 mx-1">
        <button type="button" class="w-full p-2 font-bold text-white text-xs bg-blue-800 rounded focus:outline-none hover:bg-blue-900">LinkedIn</button>
      </div>
      <div class="w-1/4 mx-1">
        <button type="button" class="w-full p-2 font-bold text-white text-xs bg-blue-500 rounded focus:outline-none hover:bg-blue-900">Twitter</button> </div>
      </div>
    </div>
  </div>
</body>