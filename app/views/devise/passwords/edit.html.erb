<div class="w-full max-w-md mx-auto p-6">
  <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Change password</h1>
      </div>
      <div class="mt-5">
        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f| %>
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <%= f.label :password, class: "block text-sm mb-2 dark:text-white"%>
              <div class="relative">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400", placeholder: "Password*", required: true, "aria-describedby": "password-error" %>
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
              <p class="hidden text-xs text-red-600 mt-2" id="password-error"><%= resource.errors.full_messages_for(:password)&.first %></p>
            </div>
            <!-- End Form Group -->
            
            <!-- Form Group -->
            <div>
              <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm mb-2 dark:text-white"%>
              <div class="relative">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400", placeholder: "Confirm password*", required: true, "aria-describedby": "password-confirmation-error" %>
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
              <p class="hidden text-xs text-red-600 mt-2" id="password-confirmation-error"><%= resource.errors.full_messages_for(:password_confirmation)&.first %></p>
            </div>
            <!-- End Form Group -->
            <%= f.submit "Change my password", class: "py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800"%>
          </div>
        <% end %>
        <!-- End Form -->
      </div>
    </div>
  </div>
</div>