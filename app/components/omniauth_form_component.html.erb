<div data-controller="omniauth-form-component">
  <p class="text-gray-700 font-bold pb-2 pl-1" style="font-size: 10px;">You can also login with:</p>
  <div class="flex justify-between items-center">
    <div class="w-1/4 mx-1">
      <%= button_to "Facebook",@paths[:facebook], data: { turbo: false }, class: "w-full p-2 font-bold text-white text-xs bg-blue-800 rounded focus:outline-none hover:bg-blue-900", type: "button" %>
    </div>
    <div class="w-1/4 mx-1">
      <%= button_to "Google", @paths[:google_oauth2], data: { turbo: false }, class: "w-full p-2 font-bold text-white text-xs bg-red-600 rounded focus:outline-none hover:bg-red-800", type: "button" %>
    </div>
    <div class="w-1/4 mx-1">
      <button type="button" class="w-full p-2 font-bold text-white text-xs bg-blue-800 rounded focus:outline-none hover:bg-blue-900">LinkedIn</button>
    </div>
    <div class="w-1/4 mx-1">
      <button type="button" class="w-full p-2 font-bold text-white text-xs bg-blue-500 rounded focus:outline-none hover:bg-blue-900">Twitter</button> </div>
    </div>
  </div>
</div>
